<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- default values outside of any theme?
    <item name="deckpicker_load_bg">@drawable/deckpicker_load_bg</item>
-->

    <style name="Theme_Base_Custom_Light" parent="@style/Theme.AppCompat.Light" />

    <style name="Theme_Base_Dark" parent="@style/Theme.AppCompat" />

    <style name="Theme_Base_Dialog" parent="@android:style/Theme.Dialog" />


    <!-- White Theme has been converted into the 'base theme' for the custom themes during development, so that I don't have to add everything to all themes -->
    <!-- Eventually may return to a 'light base' and 'dark base' approach, but not to inherit the qualities from Theme.AppCompat - rather to facilitate re-use of light-friendly icons
    dark-friendly icons  -->
    <style name="Theme_White" parent="@style/Theme_Base_Custom_Light">
        <!-- Image files, icons -->
        <item name="ic_menu_add">@drawable/ic_menu_add</item>
        <item name="ic_start">@drawable/ic_start</item>
        <item name="ic_dialog_info">@drawable/ic_dialog_info</item>
        <item name="white_list_selector_background">@drawable/white_list_selector_background</item>
        <item name="ic_media">@drawable/ic_media</item>
        <item name="deckpicker_load_bg">@drawable/deckpicker_load_bg</item>
        <item name="ic_lookup">@drawable/ic_lookup</item>

        <!-- colors throughout the app -->
        <item name="foregroundColor">#000000</item>
        <item name="backgroundElevatedColor">#dddddd</item>
        <item name="backgroundColor">#eeeeee</item>
        <item name="actionBarTextColor">#ff4488</item>

        <!--  how to setup action bar colors using attrs ?
        <item name="android:actionMenuTextColor">#88FF33</item>
-->

        <!-- Dynamic text colors -->
        <item name="learnTextColor">#ff0000</item>
        <item name="reviewTextColor">#00ff00</item>
        <item name="newTextColor">#0000ff</item>

        <item name="dyn_deck">@color/dyn_deck</item>
        <item name="non_dyn_deck">@color/non_dyn_deck</item>


        <!-- Taken from bottom_button.xml and flashcard.xml - transparent -->
        <item name="flashCardButtonBackground">#00000000</item>


        <!-- taken out of Themes.java, deckpicker backgrounds?  -->
        <item name="deckPickerListSelector">@drawable/white_deckpicker_list_selector</item>


        <item name="android:buttonStyle">@style/White.Button</item>
        <item name="android:buttonStyleSmall">@style/White.Button.Small</item>
        <item name="android:buttonStyleToggle">@style/White.Button.Toggle</item>
        <item name="android:checkboxStyle">@style/White.CompoundButton.CheckBox</item>
        <item name="android:colorForeground">#0000</item>
        <item name="android:colorBackground">@color/white_background</item>
        <item name="android:editTextStyle">@style/White.Edittext</item>
        <item name="android:radioButtonStyle">@style/White.CompoundButton.RadioButton</item>

        <!-- Action bar styles -->
        <item name="actionBarStyle">@style/White.ActionBarStyle</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/White.ActionBarStyle</item>

        <!-- Dialog styles -->
        <item name="android:alertDialogStyle">@style/White.AlertDialog</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/blue_btn_radio</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/blue_btn_check</item>
        <item name="android:listViewStyle">@style/White.Widget.ListView</item>
        <item name="android:dropDownListViewStyle">@style/White.Widget.ListView.DropDown</item>
        <item name="android:listDivider">@drawable/white_listdivider</item>
        <item name="android:listPreferredItemHeight">56dip</item>
        <item name="android:spinnerDropDownItemStyle">@style/White.Widget.DropDownItem.Spinner</item>
    </style>


    <style name="Theme_Anki_Base" parent="@style/Theme_White">
    </style>





